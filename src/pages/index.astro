---
import PageLayout from "@/layouts/Base";
import BlogPostPreview from "@/components/BlogPostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/util";
import type { Post } from "@/types";
import { getNonDrafts } from "src/util"

const meta = {
	title: "Milan Lustig",
	description: "Blog | Portfolio",
};

const MAX_POSTS = 10;
const allPostsWithDrafts = await Astro.glob<Post>("./posts/*.mdx");
const allPosts = getNonDrafts(allPostsWithDrafts);
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={meta}>

<section>
  <h1 class="mb-6 title">Hello World</h1>
  <p class="callout">
    My name is Milan Lustig, and I am a computer systems researcher and incoming freshman at Harvard University (co '29) studying Computer Science.
  </p>
  <p>
  I've worked (or am currently working) with research laboratories at University of Michigan, Stony Brook University, and New York University. My experiences cross a diverse range of fields from statistical mechanics (physics) to programming language theory. 
    <br />
  </p>
  <p>
    <br />
  However, my core focus is on compilers, programming languages, and "low-level" computer systems. Currently, I am interested in the relationship between these fields and machine learning.
    <br />
    </p>
</section>

<p style="text-align: center;">
<br />
<br />
    Please feel free to send me an email to get in touch! <br />
    <i>milan (at) lustig (dot) dev</i>
</p>

